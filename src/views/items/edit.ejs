<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Item</h1>


      <form action="/lists/<%= item.listId %>/items/<%= item.id %>/update" method="post">
        <div class="form-group">
          <label for="name">Item</label>
          <input value="<%= item.name %>" type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter Name">
        </div>
        <div class="form-group">
          <label for="bought">Has this item been bought?</label>
          <input type="checkbox" class="form-control" name="bought" checked="<% item.bought ? "checked" : "" %>" />
          <span>Yes</span>

        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
